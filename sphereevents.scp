// These are events that can go on various NPCs or characters. To add an event
// to characters  make it so that the event is included in the skillclass
// "undefined".

[EVENTS e_fame_gain]
ON=@GetHit
TAG.TEMPFAMETAG <SRC.FAME>
RETURN 0

ON=@Death
ACT.FAME <TAG.TEMPFAMETAG>
IF (<ACT.FAME> < 10000) && (<ACT.FAME> < <FAME>)
ACT.FAME <ACT.FAME>+((<FAME>+-<ACT.FAME>)/100)
IF <ACT.FAME> > 10000
ACT.FAME 10000
ENDIF
ENDIF
RETURN 1

[EVENTS e_karma_gain]
ON=@GetHit
TAG.TEMPKARMATAG <SRC.KARMA>
RETURN 0

ON=@Death
TAG.TEMPKARMATAG <SRC.KARMA>
IF (<ACT.KARMA> > -10000) && (<ACT.KARMA> < 10000)
IF <KARMA> > 0
ACT.KARMA <ACT.KARMA>+-(<KARMA>/100)
ELSE
ACT.KARMA <ACT.KARMA>+((<KARMA>+-(-<ACT.KARMA>))/100)
ENDIF
IF <ACT.KARMA> > 10000
ACT.KARMA 10000
ELSEIF <ACT.KARMA> < -10000
ACT.KARMA -10000
ENDIF
ENDIF
RETURN 1

[EVENTS e_undead]
ON=@EnvironChange
IF <SECTOR.ISDARK> || (<FLAGS>&(statf_nightsight|statf_indoors))
IF ! <TAG.LIGHTSTR>
RETURN 0
ENDIF
ANIM 011
BARK 4
STR=<TAG.LIGHTSTR>
HITS=<STR>
TAG.LIGHTSTR=0
KARMA=<TAG.LIGHTKARMA>
TAG.LIGHTKARMA=
FAME=<TAG.LIGHTFAME>
TAG.LIGHTFAME=
FLAGS=<FLAGS>&~statf_conjured
RETURN 0
ENDIF
ANIM 014
BARK 4
IF <TAG.LIGHTSTR>
RETURN 0
ENDIF
IF (<FLAGS>&statf_conjured) 
REMOVE
RETURN 1
ENDIF
FLAGS=<FLAGS>|statf_conjured
TAG.LIGHTSTR=<STR>
STR=1
HITS=1
TAG.LIGHTKARMA=<KARMA>
KARMA=-2
TAG.LIGHTFAME=<FAME>
FAME=10
RETURN 0

